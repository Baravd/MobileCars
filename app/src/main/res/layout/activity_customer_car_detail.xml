<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bvd.android.carstobert.customer.CustomerCarDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/carDetailName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/carQuantity"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/carDetailType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="TextView" />

        <EditText
            android:id="@+id/carDetailNrToBu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Qunatity To Buy" />

        <Button
            android:id="@+id/carDetailBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
